<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="data.model.MetricsEntity" table="Metrics" schema="atlantis">
        <id name="id">
            <column name="id" sql-type="int(11)"/>
        </id>
        <property name="value">
            <column name="value" sql-type="int(11)"/>
        </property>
        <property name="date">
            <column name="date" sql-type="date"/>
        </property>
        <many-to-one name="devicesByIdDevices" class="data.model.DevicesEntity">
            <column name="id_Devices"/>
        </many-to-one>
    </class>
</hibernate-mapping>